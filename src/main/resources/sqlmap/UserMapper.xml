<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.church.visit.dao.UserDao">
	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
            user.id as id ,
            user.name as name ,
            user.phone as phone ,
            user.pwd as pwd ,
            user.age as age ,
            user.addr as addr ,
            user.type as type ,
            user.is_disable as isDisable ,
            user.gmt_create as gmtCreate ,
            user.gmt_modify as gmtModify 
	    ]]>
	</sql>
    
	<!-- 新增记录 -->
	<insert id="insert" parameterType="com.church.visit.model.User" useGeneratedKeys="true" keyProperty="id" >
    <![CDATA[
        INSERT INTO user (
        	id ,
        	name ,
        	phone ,
        	pwd ,
        	age ,
        	addr ,
        	type ,
        	is_disable ,
        	gmt_create ,
        	gmt_modify 
        ) VALUES (
        	#{id} ,
        	#{name} ,
        	#{phone} ,
        	#{pwd} ,
        	#{age} ,
        	#{addr} ,
        	#{type} ,
        	#{isDisable} ,
        	#{gmtCreate} ,
        	#{gmtModify} 
        )
    ]]>
        <selectKey resultType="java.lang.Long" keyProperty="id" >
            select last_insert_id()
        </selectKey>
    </insert>
	
	<!-- 更新记录 -->
	<update id="updateById" parameterType="com.church.visit.model.User">
        UPDATE user
        <set>
	        <if test="name != null">
				name = #{name},
			</if>
	        <if test="phone != null">
				phone = #{phone},
			</if>
	        <if test="pwd != null">
				pwd = #{pwd},
			</if>
	        <if test="age != null">
				age = #{age},
			</if>
	        <if test="addr != null">
				addr = #{addr},
			</if>
	        <if test="type != null">
				type = #{type},
			</if>
	        <if test="isDisable != null">
				is_disable = #{isDisable},
			</if>
	        <if test="gmtCreate != null">
				gmt_create = #{gmtCreate},
			</if>
	        <if test="gmtModify != null">
				gmt_modify = #{gmtModify},
			</if>
		</set>
	    <![CDATA[ WHERE 
	        id = #{id} 
        ]]>
    </update>

	<!-- 根据主键查询 -->
    <select id="getById" parameterType="java.lang.Long" resultType="com.church.visit.model.User">
	    select <include refid="commonColumns"/>
	    <![CDATA[ from user where 
		        id = #{id} 
	    ]]>
    </select>
    <select id="queryByName" parameterType="java.lang.String" resultType="com.church.visit.model.User">
    	select <include refid="commonColumns"/>
    	from user
    	where name=#{name}
    </select>

</mapper>